
extends ../layout/main
block variable
  -
    var title_page = 'firm'
    var id_page = 'id-page-firm'
    var class_page = 'class-page-firm'
    var breadcrumbsSubitem = [
      {
        label: 'About',
        link: pagesLink[0].about
      }
    ]

    var aboutUsTitle = 'The Firm'
  
block meta
  title= title_page
  meta(name='description', content='')
block head
    link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
  script(defer src='./assets/scripts/vendors.bundle.js')
  script(defer src='./assets/scripts/index.bundle.js')
block content
  .inner-screen-1
  include ../blocks/block-about-us.pug
  .img-screen
    img(src="./assets/images/firm/bg.jpg", alt="", srcset="")
  .timeline-block.g-screen-with-paddings
    .timeline-block__content
      .block-subtitle Our History
      .timeline-block__title Decades of expertise, light-speed progress.
      .timeline-block__list
        .timeline-block__list-large-item.active 2021
        .timeline-block__list--small-item.active January — North Development Foundation
        .timeline-block__list--small-item November — Site for Domus Brickell Park is Purchased
        .timeline-block__list-large-item 2022
        .timeline-block__list--small-item December — Start of Brickell Park sales
        .timeline-block__list--small-item September — Site of Domus Brickell Center goes under contract
        .timeline-block__list-large-item 2023
        .timeline-block__list--small-item February — Purchase of North Development headquarters 
        .timeline-block__list--small-item October — Site for House of Wellness goes under contract
        .timeline-block__list-large-item 2024
        .timeline-block__list--small-item April — $70M construction loan for Brickell Park 
        .timeline-block__list--small-item May — Start of Brickell Center Sales
        .timeline-block__list--small-item July — Start of Construction of Domus Brickell Park
  include ../includes/contact-screen.pug
block footer
  include ../includes/footer.pug

block header
  include ../includes/header.pug
